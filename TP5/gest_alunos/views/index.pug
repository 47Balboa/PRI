extends layout
block content
    .w3-container
        .w3-card-4
            header.w3-container.w3-pale-red
                h3 Gestao de Alunos
        .w3-card-4
            table.w3-table-all
                tr
                    th Identificador
                    th Nome
                    th Curso
                    th Operações
                each i in lista
                    tr
                        td= i.id
                        td= i.nome
                        td= i.curso
                        td
                            button.w3-button.w3-circle.w3-blue-grey(onclick="apagaAluno('" + i.id + "')") Apagar
                            a(href='/alunos/' + i.id)
                                button.w3-button.w3-circle.w3-khaki.w3-margin-left Informacoes
        .w3-card-4
            header.w3-container.w3-pale-red
                h3 Registar Aluno
            .w3-container
                form.w3-container(action='/alunos' method='POST')
                    label
                        b Identificador
                    input.w3-input.w3-border.w3-light-grey(type="text", name="id")
                    label
                        b Nome
                    input.w3-input.w3-border.w3-light-grey(type="text", name="nome")
                    label
                        b Curso
                    input.w3-input.w3-border.w3-light-grey(type="text", name="curso")
                    input.w3-button.w3-circle.w3-blue-grey.w3-margin(type='submit' value='Registar')
        footer.w3-container.w3-pale-red


            

            