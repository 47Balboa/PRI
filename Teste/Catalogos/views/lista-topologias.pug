extends layout

block content
    .w3-container
        .w3-card-4
            header.w3-container.w3-teal
                h1 Lista de Tipologias
        .w3-card-4
                table.w3-table-all  
                    tr
                        
                        th Estado
                        th Sigla
                        th Designação
                        th Operações
                        
                    each tipologia in lista
                        tr
                            
                            td=tipologia.estado
                            td=tipologia.sigla
                            td=tipologia.designacao
                            td
                            
                                a(href='/tipologias/' + tipologia.id)
                                     button.w3-button.w3-circle.w3-khaki.w3-margin-left Informações
                            
        footer.w3-container.w3-teal
                    address.w3-right 
                     a(href="/") Voltar à página principal 