extends layout

block content
    .w3-container
        .w3-card-4
            header.w3-container.w3-teal
                h1 Lista de Filmes 
        .w3-card-4
                table.w3-table-all  
                    tr
                        
                        th Titulo
                        th Ano
                        th Elenco
                        th Géneros
                        th Operações
                        th Apagar
                    each filme in lista
                        tr
                            
                            td=filme.title
                            td=filme.year
                            td=filme.cast
                            td=filme.genres
                            td
                                a(href='/filmes/' + filme._id)
                                     button.w3-button.w3-circle.w3-khaki.w3-margin-left Informações
                            td
                                button.w3-button.w3-circle.w3-blue-grey(onclick="apagaFilme('" + filme._id + "')") Apagar
                            
        footer.w3-container.w3-teal
                    address.w3-right 
                     a(href="/") Voltar à página principal 
