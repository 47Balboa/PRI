extends layout
block content
    .w3-container
        .w3-card-4
            header.w3-container.w3-teal
                h3 Informações do Filme
        .w3-card-4
            table.w3-table-all  
                    tr
                        th Título
                        th Ano
                        th Elenco
                        th Géneros
                        th 
                    tr
                        td= filme.title
                        td= filme.year
                        td
                            each c in filme.cast
                                li= c
                        td
                            each g in filme.genres
                                li= g       
        .w3-card-4
            
        footer.w3-container.w3-teal
            address.w3-right 
                a(href="/filmes")  Voltar à pagina anterior
                